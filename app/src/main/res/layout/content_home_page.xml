<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.akura.kursat.automaticchess.activity.HomePageActivity"
    tools:showIn="@layout/app_bar_home_page">


        <Button
            android:id="@+id/btnPlay"
            android:layout_width="101dp"
            android:layout_height="70dp"
            android:text="PLAY"
            android:layout_marginLeft="36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp"
            app:layout_constraintHorizontal_bias="0.461"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/twUserName"
            android:layout_width="181dp"
            android:layout_height="74dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="62dp"

            android:text="User Name"
            android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0.572"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/twTableId"
            android:layout_width="160dp"
            android:layout_height="72dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="11dp"
            android:editable="true"
            android:text="Table Id:"
            android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.168"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/twUserName" />

        <TextView
            android:id="@+id/twScore"
            android:layout_width="160dp"
            android:layout_height="72dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:text="Score:"
            android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.168"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/twTableId" />

        <ImageButton
            android:id="@+id/ibEdit"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="36dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/twScore"
            app:srcCompat="@android:drawable/ic_menu_edit"
            app:layout_constraintLeft_toRightOf="@+id/twEditName"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.107" />

        <TextView
            android:id="@+id/twEditName"
            android:layout_width="133dp"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="44dp"
            android:enabled="true"
            app:layout_constraintHorizontal_bias="0.146"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/twScore" />

        <TextView
            android:id="@+id/twGetTableId"
            android:layout_width="94dp"
            android:layout_height="49dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="24dp"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/twTableId"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/twUserName" />


</android.support.constraint.ConstraintLayout>
